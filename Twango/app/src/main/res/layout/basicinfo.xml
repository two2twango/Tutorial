<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#bbb"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/linearLayout">
        <android.support.v4.widget.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="81dp" />

    </LinearLayout>

    <TextView
        android:layout_width="206dp"
        android:layout_height="61dp"
        android:text="BASIC INFORMATION"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:id="@+id/basicinfo"
        />
    <TextView
        android:layout_width="129dp"
        android:layout_height="40dp"
        android:text="AGE"
        android:layout_below="@+id/basicinfo"
        android:textSize="29dp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEIGHT"
        android:id="@+id/textView2"
        android:layout_toRightOf="@+id/linearLayout"
        android:textSize="29dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELIGION"
        android:id="@+id/textView4"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textSize="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CITY"
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:textSize="29dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/basicinfo"
        android:layout_toRightOf="@+id/basicinfo"
        android:layout_toEndOf="@+id/basicinfo"
        android:layout_above="@+id/textView2" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/listView"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignStart="@+id/listView"
        android:layout_above="@+id/textView4" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/listView2"
        android:layout_alignStart="@+id/listView2"
        android:layout_above="@+id/textView5" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView4"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/listView3"
        android:layout_alignStart="@+id/listView3"
        android:layout_alignBottom="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
